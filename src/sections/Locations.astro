<section id="contacto" class="py-16 bg-[var(--background-color)]">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-8 text-gray-50">
      Cont√°ctanos
    </h2>

    <form
      class="max-w-md mx-auto bg-white/10 backdrop-blur-sm p-6 rounded-lg shadow-lg"
      action="https://formspree.io/f/xanqdjzo"
      method="POST"
    >
      <div class="mb-4">
        <label for="name" class="block text-gray-100 mb-2">Nombre: </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-3 py-2 bg-gray-800 text-white rounded border border-gray-700 focus:outline-none focus:border-red-500"
        />
      </div>

      <div class="mb-4">
        <label for="email" class="block text-gray-100 mb-2">Correo: </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-3 py-2 bg-gray-800 text-white rounded border border-gray-700 focus:outline-none focus:border-red-500"
        />
      </div>

      <div class="mb-4">
        <label for="message" class="block text-gray-100 mb-2">Mensaje: </label>
        <textarea
          id="message"
          name="message"
          rows="4"
          required
          class="w-full px-3 py-2 bg-gray-800 text-white rounded border border-gray-700 focus:outline-none focus:border-red-500"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-red-600 text-white py-2 px-4 rounded hover:bg-red-700 transition-colors"
      >
        Enviar Mensaje
      </button>
    </form>
  </div>
</section>
