---
interface Props {
  error: string
  mensaje: string
  contexto: string
}

const { error, mensaje, contexto } = Astro.props
---

<section
  class="flex min-h-screen items-center justify-center bg-background px-6 py-24 sm:py-32 lg:px-8"
>
  <div class="text-center">
    <p class="text-6xl font-semibold text-primary">{error}</p>
    <h1 class="mt-4 text-3xl font-bold tracking-tight text-white sm:text-5xl">
      {mensaje}
    </h1>
    <p class="mt-6 text-base leading-7 text-gray-300">{contexto}</p>
    <div class="mt-10">
      <a
        href="/"
        class="text-sm font-semibold leading-7 text-white hover:text-primary"
      >
        <span aria-hidden="true">&larr;</span> Volver al inicio
      </a>
    </div>
  </div>
</section>
