---
import Layout from "@/layouts/Layout.astro"
import { products } from "@/data/products"

export function getStaticPaths() {
  return products.map((product) => ({
    params: { id: product.id },
    props: { product },
  }))
}

const { product } = Astro.props
---

<Layout title={`${product.title} - Carnicería San Martin`}>
  <main class="pt-32 pb-24 bg-background min-h-screen">
    <div class="container mx-auto px-4">
      <a
        href="/#productos"
        class="inline-flex items-center text-white hover:text-primary mb-8 transition-colors"
      >
        <span class="mr-2">←</span> Volver a productos
      </a>

      <div class="grid md:grid-cols-2 gap-8">
        {/* Product Header */}
        <div class="relative h-96 rounded-lg overflow-hidden">
          <img
            src={product.image}
            alt={product.title}
            class="w-full h-full object-cover"
          />
        </div>

        <div class="text-white">
          <h1 class="text-4xl font-bold mb-4">{product.title}</h1>
          <p class="text-gray-200 mb-8">{product.description}</p>
        </div>
      </div>

      {/* Product Items Grid */}
      <div class="mt-16">
        <h2 class="text-2xl font-bold text-white mb-8">Cortes disponibles</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {
            product.items.map((item) => (
              <article class="bg-white/10 rounded-lg p-4 transition-transform hover:scale-105">
                <img
                  src={item.image}
                  alt={item.name}
                  class="w-full aspect-square object-cover rounded-lg mb-4"
                />
                <h3 class="text-lg font-semibold text-white text-center">
                  {item.name}
                </h3>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </main>
</Layout>
